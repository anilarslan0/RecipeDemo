@model List<RecipeDemo.Models.Recipe>
@{
    ViewData["Title"] = "RecipeDetails";
    Layout = "~/Views/Shared/_LayoutRecipe.cshtml";
}
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-12">
            <h2>@item.Title</h2>
        </div>
    </div>

    <img style="height:200px;" src="@item.ImageURL" /><br />
    <p>@item.Description</p>

}